#:import formulaire formulaire

<Formulaire>
    orientation:'vertical'
    ActionBar:
        ActionView:
            ActionPrevious:
                title:'formulaire'
                on_press:app.manager.pop()
    Label:
        text:'Complétion du formulaire'
        font_size:28
        color:1,.2,.2,1
        size_hint:1,.4
    LeFormulaire:
        id:leformulaire
        size_hint:1,2
    FloatLayout:

        Button:
            text:'valider'
            id:button
            size_hint:None,.3
            width:300
            pos_hint:{'center_x':.5,'y':.2}
            on_press:root.valider();

#_____________________________________________________________________


<LeFormulaire@BoxLayout>:
    orientation:'horizontal'
    LeLabel:
    LaCompletion:
        id:lacompletion
    FloatLayout:
        size_hint:.3,1


<LeLabel@BoxLayout>:
    size_hint:.3,1
    spacing:20
    orientation:'vertical'
    Label:
        text:"Nom"
        #size_hint:None,1
        #width:60


    Label:
        text:"Prenom"
    Label:
        text:"CIN"
    Label:
        text:"Tel"
    Label:
        text:"Date"
    Label:
        text:"Heure"
    Label:
        text:"Nombre de places"
    Label:
        text:"Mode de paiement:"
<LaCompletion>:
    orientation:'vertical'
    spacing:20
    TextInput:
        hint_text:'nom...'
        id:nom
        multiline:False
        on_text_validate:root.focus_next(prenom)
    TextInput:
        hint_text:'prénom...'
        id:prenom
        multiline:False
        on_text_validate:root.focus_next(cin)
    TextInput:
        input_filter:'int'
        hint_text:'cin...'
        id:cin
        multiline:False
        on_text_validate:root.focus_next(tel)
    TextInput:
        input_filter:'int'
        hint_text:'tel...'
        id:tel
        multiline:False
        on_text_validate:root.focus_next(jour)
    BoxLayout:
        spacing:10
        TextInput:
            input_filter:'int'
            hint_text:"jour..."
            id:jour
            multiline:False
            on_text_validate:root.focus_next(mois)
        TextInput:
            input_filter:'int'
            hint_text:'mois...'
            id:mois
            multiline:False
            on_text_validate:root.focus_next(annee)
        TextInput:
            input_filter:'int'
            hint_text:'année...'
            id:annee
            multiline:False
            on_text_validate:root.focus_next(nb_place)
    BoxLayout:
        spacing:10
        ToggleButton:
            text:"7:00"
            group:'heure'
            id:heure1
        ToggleButton:
            text:"9:00"
            group:'heure'
            id:heure2
        ToggleButton:
            text:"11:00"
            group:'heure'
            id:heure3
    TextInput:
        input_filter:'int'
        hint_text:'nb...'
        multiline:False
        id:nb_place
    BoxLayout:
        orientation:'horizontal'
        BoxLayout:
            Label:
                id:label1
                size_hint_x:0.6
                text:'immediat'
            CheckBox:
                id:chbx1
                group:'paiement'
                size_hint_x:0.2
            Widget:
                size_hint_x:0.2
        BoxLayout:
            Label:
                size_hint_x:0.6
                text:'au départ'
                id:label2
            CheckBox:
                group:'paiement'
                size_hint_x:0.2
                id:chbx2
            Widget:
                size_hint_x:0.2




